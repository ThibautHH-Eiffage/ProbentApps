<Microsoft.AspNetCore.Components.Web.PageTitle>@Title</Microsoft.AspNetCore.Components.Web.PageTitle>

<MudText Typo="SubPage ? Typo.h5 : Typo.h3" GutterBottom>@Title</MudText>

@code {
    [Parameter, EditorRequired]
    public string Title { get; init; } = string.Empty;

    [Parameter]
    public bool SubPage { get; init; } = false;
}
