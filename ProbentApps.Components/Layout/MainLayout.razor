@inherits LayoutComponentBase

@using MudBlazor.Services
@using MudBlazor.StaticInput

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider CloseButton="true" CloseOnEscapeKey="true" />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudStaticNavDrawerToggle DrawerId="nav-drawer" Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" />
        <MudLink Href="" Typo="Typo.h5" Class="ml-3" Color="Color.Inherit" Underline="Underline.None">ProbentApps</MudLink>
    </MudAppBar>
    <MudDrawer id="nav-drawer" ClipMode="DrawerClipMode.Always" Elevation="2" Open>
        <NavMenu />
    </MudDrawer>
    <MudMainContent Class="mt-16 pa-4">
        @Body
    </MudMainContent>
</MudLayout>


