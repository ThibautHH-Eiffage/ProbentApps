@attribute [Route(Error.Endpoint)]

@using System.Diagnostics
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.Extensions.Localization
@using ProbentApps.Components
@using ProbentApps.Localization

@attribute [ExcludeFromInteractiveRouting]

@inject IStringLocalizer<SharedResources> Localizer

<PageTitle>@Localizer["Error"]</PageTitle>

<ServerError RequestId="@(Activity.Current?.Id ?? HttpContext?.TraceIdentifier)" />

@code {
    internal const string Endpoint = "/Error";

    [CascadingParameter]
    private HttpContext? HttpContext { get; set; }
}
